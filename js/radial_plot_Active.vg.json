{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A simple radial chart with embedded data.",
    "data": { "url": "https://raw.githubusercontent.com/qwan0066/fit3179-assignment2/main/data/groupby_Active.csv"
    },
    "layer": [{
      "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"}
    },{
      "mark": {"type": "text", "radiusOffset": 30},
      "encoding": {
        "text": {"field": "Active", "type": "quantitative"}
      }
    }],
    "encoding": {
      "theta": {"field": "Active", "type": "quantitative", "stack": true, "sort": "ascending"},
      "radius": {"field": "Active", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}, "sort": "ascending"},
      "color": {"field": "Continent", "type": "nominal", "legend": {"title":"Continents"}}
    }
  }
  